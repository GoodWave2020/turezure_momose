<p id="notice"><%= notice %></p>

<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table class="table table-bordered">
<% @blogs.order(created_at: "DESC").each do |blog| %>
  <tr>
    <td>
      <%= link_to blog.title, blog_path(blog.id)%>
      <div class="pull-right">
      <%= l blog.created_at, format: :short%>
      </div>
    </td>
    <td>
      <%= link_to "編集", edit_blog_path(blog.id) %>
      <%= link_to "削除", blog_path(blog.id),
              method: :delete, data: { confirm: "本当に削除しますか" }%>
      <%  if blog.comments.size > 0 %>
      <%= link_to "#{blog.comments.size}件のコメント", blog_path(blog.id)%>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
<%= link_to "ブログを作成する", new_blog_path %>
