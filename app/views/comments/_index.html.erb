
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <table class="table table-bordered">
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <tr>
          <th><%= comment.name %>さん  <%= l comment.created_at, format: :short %></th>
        </tr>
        <tr>
          <td>
            <%= comment.content %> <br>
            <%= link_to "編集", edit_blog_comment_path(blog, comment), remote: true %>
            <%= link_to "削除", blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true,
                                      data: { confirm: "本当に削除しますか?"} %>
          </td>
        </tr>
      </table>
    <% end %>
  <% end %>
